<%= turbo_frame_tag "room_#{room.id}" do %>
  <div class="flex items-center justify-between border border-white-500 py-2 px-2">
    <%= link_to room_path(room), class: "font-semibold text-white text-sm", data: { turbo_frame: 'rooms_controller' } do %>
      <%= room.name %>
    <% end %>

    <%= link_to '-> Edit', edit_room_path(room), class: "text-white text-xs" %>
  </div>
<% end %>
